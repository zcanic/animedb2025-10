{
  "version": 2,
  "builds": [
    {
      "src": "main_simple.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/main_simple.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "functions": {
    "main_simple.py": {
      "maxDuration": 30
    }
  }
}